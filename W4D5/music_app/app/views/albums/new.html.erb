<h1>New <%= @current_band.name %> Album</h1>
<form action="<%= albums_url%>" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<p>
    <label for="title">Name: </label>
    <input type="text" name="album[title]" id="title">
</p>
<p>
    <label for="band">Band: </label>
    <select name="album[band_id]" id="band">
        <% @bands.each do |band| %>
            <option value="<%= band.id%>" <%= @current_band.id == band.id ? "selected" : ""%>><%= band.name%></option>
        <% end %>
    </select>
</p>
<p>
    <label for="album_live">Live: </label>
    <input type="radio" name="album[album_type]" id="album_live" value="live">
    <label for="album_studio">Studio: </label>
    <input type="radio" name="album[album_type]" id="album_studio" value="studio" checked>
</p>
<p>
    <label for="year">Year: </label>
    <input type="text" name="album[year]" id="year">
</p>
    <input class="button" type="submit" value="Submit">
</form>